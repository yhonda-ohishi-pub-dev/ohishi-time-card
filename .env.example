# Docker Compose Environment Variables

# MariaDB Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=db
MYSQL_USER=timecard
MYSQL_PASSWORD=timecard

# Rust API Server Configuration
RDB_HOST=localhost
RDB_USER=timecard
RDB_PASSWORD=timecard
RDB_NAME=db
GRPC_PORT=50051
HTTP_PORT=8080

# Socket.IO Server (replaces Node.js server)
# Set to enable Socket.IO server mode
SOCKETIO_SERVER_PORT=3050

# HTTPS/TLS Configuration (optional)
# TLS_CERT_PATH=./certs/ohishi-timecard.ohishi.local+4.pem
# TLS_KEY_PATH=./certs/ohishi-timecard.ohishi.local+4-key.pem

# Socket.IO Client (connect to existing Node.js server)
# Used when running in client mode
# SOCKETIO_URL=https://172.18.21.90:3050
